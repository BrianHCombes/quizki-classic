<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

		<bean id="reloadLoggingPropertiesRunnable" class="com.haxwell.apps.questions.events.runnables.ReloadLoggingPropertiesRunnable"></bean>
		
		<bean id="scheduledExecutorTask" class="org.springframework.scheduling.concurrent.ScheduledExecutorTask">
			<property name="period" value="10000"/>
			<property name="runnable" ref="reloadLoggingPropertiesRunnable"/>
		</bean>
		
		<bean class="org.springframework.scheduling.concurrent.ScheduledExecutorFactoryBean">
			<property name="scheduledExecutorTasks">
				<list>
					<ref bean="scheduledExecutorTask"/>
				</list>
			</property>
		</bean>

</beans>